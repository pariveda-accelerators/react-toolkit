{
  "name": "@pariveda-solutions/react-toolkit",
  "version": "0.0.1-9",
  "description": "Component library for React applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/pariveda-accelerators/react-toolkit.git"
  },
  "author": {
    "name": "Zak Butcher",
    "email": "zak.s.butcher@gmail.com"
  },
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "storybook": "yarn build-styles && yarn start-storybook -p 4000 --ci",
    "build-storybook": "build-storybook",
    "build-styles": "node ./sass/node-sass.js",
    "watch-styles": "nodemon --watch ./sass -e scss -x \"yarn build-styles\""
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 85,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/tmp.esm.js",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/react": "^5.3.12",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^4.4.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "chromatic-sass": "^0.1.8",
    "classnames": "^2.2.6",
    "husky": "^4.2.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup-plugin-scss": "^2.1.0",
    "styled-components": "^5.0.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "tsdx": "^0.12.3",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  }
}
