{
  "chromeSelector": ".sb-show-main > *",
  "chromeEnableAnimations": false,
  "chromeTolerance": 1,
  "verboseRenderer": true,
  "chromeFlags": "--disable-gpu --hide-scrollbars --wm-window-animations-disabled --enable-font-antialiasing --font-render-hinting=none",
  "looks-same": {
    "ignoreCaret": true,
    "strict": false,
    "tolerance": 2.5,
    "ignoreAntialiasing": true,
    "antialiasingTolerance": 3
  },
  "configurations": {
    "chrome.laptop": {
      "target": "chrome.app",
      "width": 1920,
      "height": 1080
    }
  }
}
